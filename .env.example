# WARDKEY Server Environment Variables

# Server
PORT=3000
NODE_ENV=production

# Authentication
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Database
DB_PATH=./data/wardkey.db

# CORS
ALLOWED_ORIGINS=https://wardkey.io,https://www.wardkey.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Email Aliases
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALIAS_DOMAIN=wardkey.email

# Share Links
SHARE_BASE_URL=https://wardkey.io/s
SHARE_MAX_EXPIRY_DAYS=30
